extends ./_layout

block content
  
  .container
    .col.col-md-6
      .output
        
    .col.col-md-6.input
      h1 Ahoy BATTLESHIP player looking for a thrill on the information superhighway
      
      h2 your ctrls
      form(id="fire", method="POST", action="/api/fire", class="form-inline")
        input(id="coordinates", class="form-control" type="text", placeholder="coordinates (i.e. a5)", autocomplete="off", required="true", pattern="\\D\\d+")
        button(type="submit", class="btn btn-default") boom!
        label(class="control-label shot-fired") SHOTS: <span class="fire-counter">0</span>
        a(id="reset", class="btn btn-default pull-right", role="button", href="#") reset game
        
          
      h2 results
      pre
        .results.form-control
      
      h2 debug
      a(id="debug-mode", class="btn btn-default", role="button", href="#") toggle poseidon mode
      
  .container
    .output-raw.hidden
  footer
    script(defer, rel='script/text', src='https://code.jquery.com/jquery-2.1.4.min.js')
    script(defer, rel='script/text', src='js/front-client.js')
